{
  "name": "qrcode-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --o",
    "dev": "yarn run compose-up &&  yarn run start",
    "drop-n-go": "yarn run postgresql-down && yarn run compose-down && yarn run compose-up &&  yarn run start",
    "postgresql-down": "service postgresql stop",
    "compose-up": "docker-compose -f ./docker/docker-compose.yml up -d",
    "compose-down": "docker-compose -f ./docker/docker-compose.yml down",
    "debug-backend": "dockerId=`docker ps -aqf 'name=qrcode_backend'` && xterm -e docker logs -f $dockerId",
    "build-n-go": "yarn run compose-down && ng build && yarn run dev",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "fake-server": "json-server --host localhost --port 4201 src/assets/database/test-db.json",
    "fake-cities": "json-server --host localhost --port 4202 src/assets/database/estados-cidades.json",
    "fake-qr-db": "json-server --host localhost --port 4203 src/assets/database/qr-db.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.0",
    "@angular/cdk": "^13.2.5",
    "@angular/common": "~13.2.0",
    "@angular/compiler": "~13.2.0",
    "@angular/core": "~13.2.0",
    "@angular/forms": "~13.2.0",
    "@angular/localize": "~13.2.0",
    "@angular/material": "^13.2.5",
    "@angular/platform-browser": "~13.2.0",
    "@angular/platform-browser-dynamic": "~13.2.0",
    "@angular/router": "~13.2.0",
    "@ng-bootstrap/ng-bootstrap": "12.0.0",
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.1.3",
    "countrycitystatejson": "^20.8.14",
    "jquery": "^3.6.0",
    "rxjs": "^7.5.4",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.5",
    "@angular/cli": "~13.2.5",
    "@angular/compiler-cli": "~13.2.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.5.2"
  }
}
